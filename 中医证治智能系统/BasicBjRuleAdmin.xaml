            <Label Content="条件名称：" HorizontalAlignment="Left" Margin="98,248,0,0" VerticalAlignment="Top"/>
            <ComboBox  DropDownClosed="comb_ffs_DropDownClosed" Name="comb_ffs" HorizontalAlignment="Left" Margin="210,92,0,0" VerticalAlignment="Top" Width="140" Height="24">
