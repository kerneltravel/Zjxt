                </Grid>
            </Button>
        </Grid>
        <TreeView  Name="treeview" HorizontalAlignment="Left" Width="365" Grid.Column="0" VerticalAlignment="Top" Height="546" Grid.ColumnSpan="2" Margin="0,116,0,0">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Nodes}">
                    <StackPanel Orientation="Horizontal">
                        <Image VerticalAlignment="Center" Source="{Binding ImageNode}"/>
                        <TextBlock Text="{Binding Path = Name}"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Grid Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="528" Height="670">
            <Grid.RowDefinitions>
