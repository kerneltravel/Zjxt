            <ComboBox  Name="comb_tjfz" HorizontalAlignment="Left" Margin="285,183,0,0" VerticalAlignment="Top" Width="96" Height="24" RenderTransformOrigin="0.483,0.292" DropDownClosed="comb_tjfz_DropDownClosed">
